#include <stdio.h>

void main()
{
    int n, cont = 0, suma = 0;
    do 
    {
        printf("Dar un numero en ronda %d:", cont+1);
        scanf("%d", &n);
        suma= suma+n;
        cont= cont + 1;
        
    }
    while(suma<= 100 && cont <10);
    
    if (suma > 100)
    {
        printf("\nLa suma de los numeros introducidos es mayor a 100: %d\n", suma);
    }
}
